{
	"name": "@benev/humanoid",
	"version": "0.0.0-x.0",
	"description": "character controller for babylon games",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"prepare": "babylon-cleanup",
		"build": "rm -rf x && run-s build-app build-ssg build-links",
		"build-app": "turtle build --out=x -v",
		"build-ssg": "turtle ssg --in=s,x --out=x --exclude=bin -v",
		"build-links": "mkdir -p assets/dist && ln -s \"$(realpath assets/dist)\" x/assets && ln -s \"$(realpath s)\" x/s",
		"build-old": "rm -rf x && turtle build --out=x -v && turtle ssg --in=s,x --out=x --exclude=bin -v && run-s links",
		"start": "run-p start-http start-watch",
		"start-http": "http-server x",
		"start-watch": "turtle watch --in=s,x --out=x --exclude=bin -v",
		"mount": "s/bin/mount",
		"unmount": "s/bin/unmount",
		"assets-down": "s/bin/assets-down",
		"assets-up": "s/bin/assets-up",
		"assets-cycle": "run-s assets-down assets-up",
		"test": "cynic node x/tests.test.js",
		"test-watch": "chokidar \"x/**/*.js\" -c \"clear && npm test\""
	},
	"dependencies": {
		"@benev/slate": "^0.2.0-0",
		"@benev/toolbox": "^0.6.0-10",
		"@dimforge/rapier3d": "^0.13.1",
		"@dimforge/rapier3d-compat": "^0.13.1",
		"@rollup/plugin-terser": "^0.4.4",
		"es-module-shims": "^1.10.0",
		"lit": "^3.1.4",
		"simplex-noise": "^4.0.1",
		"zx": "^8.1.3"
	},
	"peerDependencies": {
		"@babylonjs/core": "^7.12.0",
		"@babylonjs/loaders": "^7.12.0"
	},
	"devDependencies": {
		"@benev/batch": "^0.0.0",
		"@benev/turtle": "^0.6.0-2",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-wasm": "^6.2.2",
		"chokidar": "^3.6.0",
		"chokidar-cli": "^3.0.0",
		"cynic": "^0.2.1",
		"http-server": "^14.1.1",
		"importly": "^0.2.3",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.7",
		"rollup": "^4.18.0",
		"terser": "^5.31.1",
		"typescript": "^5.5.2"
	},
	"keywords": [
		"game",
		"babylon",
		"character",
		"character controller"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/benevolent-games/humanoid.git"
	},
	"bugs": {
		"url": "https://github.com/benevolent-games/humanoid/issues"
	},
	"homepage": "https://github.com/benevolent-games/humanoid#readme"
}
